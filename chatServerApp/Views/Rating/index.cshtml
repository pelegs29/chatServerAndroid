@model IEnumerable<chatServer.Models.Rating>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-4 ">
    <div class="row">
        <h1 class="col-5 col">The Rating Page</h1>
        <form asp-action="Search" asp-controller="Rating" asp-route-search="search" class="col-5">
            <div class="form-group d-flex col">
                <input id="search" name="search" class="form-control w-100" placeholder="Search Rating"/>
                <button type="submit" class="btn btn-primary m-2"> Search </button>
            </div>
        </form>

    </div>
    <p>
        the average is @ViewBag.average stars
    </p>

    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stars)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Review)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stars) / 5
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <p>
        <a asp-action="Create">Create New</a>
    </p>

</div>